<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.l03.projektpaszport.DodajLekarstwoActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Zdjecie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvZdjecie" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/ivZdjecie"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <Button
                android:text="Wybierz zdjęcie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bZdjecie"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                style="@style/Widget.AppCompat.Button.Colored" />
            <TextView
                android:text="Ilosc"
                android:layout_width="89dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvIlosc" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvZdjecie"
                android:inputType="textPersonName"
                android:text=""
                android:ems="10"
                android:id="@+id/etIlosc"
                android:layout_alignParentBottom="true" />
            <TextView
                android:text="Godzina"
                android:layout_width="89dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvGodzina" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etIlosc"
                android:inputType="textPersonName"
                android:text=""
                android:ems="10"
                android:id="@+id/etGodzina" />
            <TextView
                android:text="Sposób zażycia"
                android:layout_width="89dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvSposobZazycia" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etGodzina"
                android:inputType="textPersonName"
                android:text=""
                android:ems="10"
                android:id="@+id/etSposobZazycia" />

            <Button
                android:text="Dodaj Lekarstwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bDodajLekarstwo"
                android:layout_alignBottom="@+id/etSposobZazycia"
                style="@style/Widget.AppCompat.Button.Colored" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>